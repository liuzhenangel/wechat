# Watch your rails app & sidekiq process and restart it automatically
# Usage:
# `sudo apt-get install monit -y`
# `cp monit.conf.example /etc/monit/conf.d/`
check process wechat_puma
  with pidfile /data/www/wechat/shared/tmp/pids/puma.pid
  start program = "/bin/sh -c 'cd /data/www/wechat/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH RAILS_ENV="production" bundle exec puma -q -d -e production -C config/puma.rb'" as uid ruby and gid ruby with timeout 90 seconds
  stop program = "/bin/sh -c 'cd /data/www/wechat/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH RAILS_ENV="production" bundle exec pumactl -F /data/www/wechat/current/config/puma.rb stop'" as uid ruby and gid ruby with timeout 90 seconds
  group wechat

check process wechat_sidekiq
  with pidfile /data/www/wechat/shared/tmp/pids/sidekiq.pid
  start program = "/bin/sh -c 'cd /data/www/wechat/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH RAILS_ENV="production" bundle exec sidekiq -d -e production  -C /data/www/wechat/current/config/sidekiq.yml -i 0 -P /data/www/wechat/shared/tmp/pids/sidekiq.pid -L /data/www/wechat/current/log/sidekiq.log'" as uid ruby and gid ruby with timeout 90 seconds
  stop program = "/bin/sh -c 'cd /data/www/wechat/current; PATH=bin:/home/ruby/.rbenv/shims:/home/ruby/.rbenv/bin:$PATH RAILS_ENV="production" bundle exec sidekiqctl stop /data/www/wechat/shared/tmp/pids/sidekiq.pid 11'" as uid ruby and gid ruby with timeout 90 seconds
  group wechat
